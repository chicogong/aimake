{
  "name": "aimake",
  "version": "0.1.0",
  "type": "module",
  "description": "AI语音内容生成平台 - 播客、有声书、配音",
  "scripts": {
    "dev": "npx live-server . --port=3000 --open=/website/index.html --watch=website,docs",
    "dev:docs": "npx live-server . --port=3000 --open=/website/docs.html --watch=website,docs",
    "dev:product": "npx live-server . --port=3000 --open=/website/product.html --watch=website",
    "dev:developers": "npx live-server . --port=3000 --open=/website/developers.html --watch=website",
    "preview": "npx serve . -l 3000",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:md",
    "lint:js": "eslint 'website/**/*.js' --fix",
    "lint:css": "stylelint 'website/**/*.css' --fix",
    "lint:md": "markdownlint '**/*.md' --ignore-path .markdownlintignore",
    "format": "prettier --write '**/*.{js,css,html,json,md}' --ignore-path .prettierignore",
    "format:check": "prettier --check '**/*.{js,css,html,json,md}' --ignore-path .prettierignore"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chicogong/aimake.git"
  },
  "author": "chicogong",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "live-server": "^1.2.2",
    "markdownlint-cli": "^0.47.0",
    "prettier": "^3.2.4",
    "serve": "^14.2.4",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^39.0.1"
  }
}
