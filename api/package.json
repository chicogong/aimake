{
  "name": "aimake-api",
  "version": "0.1.0",
  "description": "AIMake API - Cloudflare Workers Backend",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply aimake-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply aimake-db --remote",
    "db:studio": "drizzle-kit studio",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@clerk/backend": "^1.21.0",
    "@hono/zod-validator": "^0.4.3",
    "drizzle-orm": "^0.40.0",
    "hono": "^4.7.6",
    "stripe": "^17.7.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.12.1",
    "@cloudflare/workers-types": "^4.20250109.0",
    "@types/node": "^22.10.7",
    "drizzle-kit": "^0.30.4",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4",
    "wrangler": "^3.101.0"
  }
}
